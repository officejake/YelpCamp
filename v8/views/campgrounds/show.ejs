<% include ../partials/header %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item"> Info 1 </li>
                <li class="list-group-item"> Info 2 </li>
                <li class="list-group-item"> Info 3 </li>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="card card-outline-danger">
                <div class="card-header">
                    <img class="img-responsive" src="<%=campground.image %>">
                </div>
                <div class="card-footer">
                    <h5 class="card-title"><a><%= campground.name%></a></h5>
                    <div class="d-flex text-muted" id="author">
                        <div class="mr-auto">Submitted By: <%= campground.author.username %></div>
                        <div>$9.00/night</div>
                    </div>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-outline-secondary btn-sm" id="edit-btn" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form id="delete-btn" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-outline-danger btn-sm">Delete</button>
                        </form>
                    <% } %>
                </div>
                <div class="card-body">
                    <p class="card-text"><%=campground.description %></p>
                </div>
                <div class="card-footer text-muted">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id%>/comments/new">Add New Comment</a>
                    </div>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12 pt-2">
                                <div class="d-flex  text-muted">
                                     <div class="mr-auto"><strong><%= comment.author.username %></strong></div>
                                     <div>10 days ago</span></div>
                                </div>
                                <p>
                                    <%= comment.text %>
                                </p>
                            </div>
                        </div>
                    <% }) %>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>        

<% include ../partials/footer %>